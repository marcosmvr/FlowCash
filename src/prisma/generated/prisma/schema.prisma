generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id              Int             @id @default(autoincrement())
  value           Float
  transactionType TransactionType
  category        String
  description     String
  userId          Int
  createdAt       DateTime        @default(now())
}

enum TransactionType {
  ENTRADA
  SAIDA
}
